<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20CFCECE"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00EAE8E8"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:src="@drawable/logo"
                android:background="@color/white"
                android:paddingVertical="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#B27A7878"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#00000000"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageButton
                    android:id="@+id/help"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:tooltipText="إرسال استدعاء"
                    app:srcCompat="@drawable/ic_help"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/bell"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:tooltipText="الإشعارات "
                    android:layout_weight="1"
                    android:background="#00F8F5F5"
                    app:srcCompat="@drawable/ic_bell"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/policies"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:tooltipText="السياسات والشروط "
                android:background="#00F8F5F5"
                app:srcCompat="@drawable/ic_policy"
                tools:ignore="VectorDrawableCompat" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#00000000"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageButton
                    android:id="@+id/settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:tooltipText="الإعدادات "

                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_settings"
                    tools:ignore="VectorDrawableCompat" />

                <ImageButton
                    android:id="@+id/my_requests"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tooltipText="الاستدعاءات التي قمت بإرسالها"

                    android:background="#00F8F5F5"
                    app:srcCompat="@drawable/ic_my_requests"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>